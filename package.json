{
  "name": "muscle-rotation-manager",
  "version": "3.0.0",
  "description": "筋トレ部位ローテーション管理システム",
  "type": "module",
  "main": "index.html",
  "scripts": {
    "start": "python3 -m http.server 8000",
    "dev": "python3 -m http.server 8000",
    "test": "jest",
    "test:fast": "jest --maxWorkers=6 --testTimeout=8000 --verbose=false --testPathIgnorePatterns=tests/unit/TooltipManager.test.js --cache",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "coverage": "jest --coverage --verbose --detectOpenHandles --forceExit",
    "test:detailed": "jest --coverage --verbose --detectOpenHandles --forceExit",
    "test:e2e": "jest tests/e2e/",
    "test:navigation": "jest tests/unit/navigation.test.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build": "npm run lint && npm run format",
    "build:full": "npm run lint && npm run test && npm run format",
    "deploy": "npm run build && gh-pages -d .",
    "deploy:fast": "npm run format && gh-pages -d .",
    "clean": "rm -rf node_modules package-lock.json",
    "install:clean": "npm run clean && npm install"
  },
  "keywords": [
    "fitness",
    "workout",
    "muscle-rotation",
    "progressive-overload",
    "health",
    "training"
  ],
  "author": "AppAdayCreator",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "babel-jest": "^30.2.0",
    "eslint": "^8.50.0",
    "gh-pages": "^6.1.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.0.1",
    "prettier": "^3.0.0",
    "puppeteer": "^24.26.1"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.0",
    "chart.js": "^4.4.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "error",
      "no-console": "warn",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "js/core/**/*.js",
      "js/components/**/*.js",
      "js/pages/**/*.js",
      "js/services/**/*.js",
      "js/utils/**/*.js",
      "!js/**/*.test.js",
      "!js/**/*.spec.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 20,
        "functions": 25,
        "lines": 25,
        "statements": 25
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/js/$1",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(.*\\.mjs$))"
    ],
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "testTimeout": 10000,
    "verbose": false,
    "clearMocks": true,
    "resetMocks": true,
    "restoreMocks": true,
    "reporters": [
      "default"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "json",
      "html"
    ],
    "coverageDirectory": "coverage",
    "testEnvironmentOptions": {
      "url": "http://localhost:8000",
      "resources": "usable",
      "runScripts": "dangerously"
    },
    "maxWorkers": "50%",
    "cache": true,
    "cacheDirectory": "<rootDir>/.jest-cache",
    "bail": false,
    "detectOpenHandles": false,
    "forceExit": false,
    "silent": false,
    "watchman": false
  }
}
